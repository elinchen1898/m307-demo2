{{#myposts}}
  <div class="head_blog">
    <h4> {{created_at}}</h4>
    <h1> {{titel}}</h1>
    <div
      class="bg-img"
      style="background-image: url(/uploads/{{bild1}});"
    ></div>
  </div>

  <p>{{inhalt}}</p>
  <div class="gallery">
    <div
      class="bg-img"
      style="background-image: url(/uploads/{{bild2}});"
    ></div>

    <div
      class="bg-img hoch"
      style="background-image: url(/uploads/{{bild3}});"
    ></div>

    <div
      class="bg-img"
      style="background-image: url(/uploads/{{bild4}});"
    ></div>
  </div>
{{/myposts}}

<div class="post">
  <div class="form">
    <a href="/post"><img src="/icons/upload.png" alt="icon post" /></a>
  </div>
</div>

<form
  action="/like/{{id}}"
  enctype="multipart/form-data"
  method="POST"
  class="heart_blog"
>
  <input type="image" src="/icons/herz.png" class="heart_blog" />
</form>

<div class="middle_button">
  <a href="/">
    <button type="submit">back to overview</button>
  </a>
</div>