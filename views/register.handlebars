<div class="form-container">
  <h1>Register</h1>

  <form action="/login">

    <div class="form">
      <label for="username"><img
          src="/icons/user.png""
          alt="icon for user"
        /></label>
      <input type="text" id="username" name="username" required />
    </div>

    <div class="form">
      <label for="e-mail"><img
          src="/icons/email.png"
          alt="icon for e-mail"
        /></label>
      <input type="e-mail" id="e-mail" name="e-mail" required />
    </div>

    <div class="form">
      <label for="password"> <img src="/icons/padlock.png" alt="icon password" /></label>
      <input type="password" id="password" name="password" required />
    </div>

    <div class="form">
      <button type="submit">register</button>
    </div>

  </form>
</div>